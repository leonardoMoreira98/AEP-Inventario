    <thead>
        <tr>
            <th>id</th>
            <th>Nome do Produto</th>
            <th>Preço</th>
            <th>Categoria</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody> 
    {% for produto in produtos %}
        <tr>
            <td>{{ produto.id }} </td>
            <td>{{ produto.nomeproduto }} </td>
            <td>{{ produto.valor }} </td>
            <td>{{ produto.categoria.descricaocategoria }} </td>
            <td>
                <a href="{{ path('produto_editar', {id: produto.id}) }}" class="btn btn-primary btn-sm">Editar</a>
                <a href="{{ path('produto_excluir', {id: produto.id}) }}" class="btn btn-primary btn-sm">Excluir</a>
            </td>
    {% endfor %}
    </toby>   
</table>   

{% endblock %}
