<br>
<a href="{{ path('produto_adicionar') }}" class="btn btn-primary btn-sm">Adicionar</a>
<br>
<form method="get">
<label></label>
    <input type="text" name="nome" class="form-control" placeholder="Inserir nome do produto" />
    <button type ="submit" class="btn btn-primary" style="margin-top: 12px">Pesquisar</button>  
</form>
